<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- For SplashScreen (Launch Screen) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set Background -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- Set Icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>

        <!-- Set Animation Time -->
        <item name="windowSplashScreenAnimationDuration">3000</item>

        <item name="android:windowSplashScreenBehavior">icon_preferred</item>

        <!-- Set Theme After Starting -->
        <item name="postSplashScreenTheme">@style/Theme.BatteryWidget</item>
    </style>

    <!-- For Activity -->
    <style name="Theme.BatteryWidget" parent="android:Theme.Material.Light.NoActionBar" />
</resources>